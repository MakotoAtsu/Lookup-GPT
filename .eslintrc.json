{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "postcss.config.js",
        "tailwind.config.js"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    }
}